+	else if(!exeLang.isEmpty() && binFile.isEmpty())
+		return QString{};
+	else if(!exeLang.isEmpty() && !binFile.isEmpty() && exeLang == binLang)
+		return QString{};
+
+	return tr("Unknown files! Maybe files are corrupted? Please download again.\n\n%1").arg(hashOutput);
