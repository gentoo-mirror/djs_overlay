+void ChroniclesExtractor::installChronicles(QStringList exe)
+{
+	extractionFile = -1;
+	fileCount = exe.size();
+	for(QString f : exe)
+	{
+		extractionFile++;
+		QFile file(f);
+
+		int chronicleNo = getChronicleNo(file);
+		if(!chronicleNo)
+			continue;
+
+		if(!createTempDir())
+			continue;
+
+		if(!extractGogInstaller(f))
+			continue;
+		
+		createBaseMod();
+		createChronicleMod(chronicleNo);
+
+		removeTempDir();
+	}
+}
