+		{ "contact", "vcmi.eu" },
+		{ "heroes", QJsonArray({"config/portraitsChronicles.json"}) },
+		{ "settings", QJsonObject({{"mapFormat", QJsonObject({{"chronicles", QJsonObject({{
+			{"supported", true},
